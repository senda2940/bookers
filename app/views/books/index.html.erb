<p id="notice"><%= notice %></p>

<header>
  <h1 class="top">Books</h1>
</header>
<main class="index-heading">
  <table>
    <thead>
			<tr>
				<th width="200px">Title</th>
				<th width="400px">Body</th>

			</tr>
		</thead>
    <% @books.each do |book| %>
    <tr>
  	  <td><%= book.title %></td>
  	  <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  	<% end %>


</table>
  <h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
      <div class="error">
        <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-title">Title</div>
      <%= f.text_field :title %>
    <div class="form-body">Body</div>
      <%= f.text_area :body %><br>
    <div class="upload">
      <%= f.submit " Create Book" %>
    </div>
  <% end %>

</main>

